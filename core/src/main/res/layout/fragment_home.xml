<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="vertical"
        android:paddingBottom="64dp">

        <TextView
            android:id="@+id/tvGeneralTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Adam Styrc"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/general_margin"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/general_margin"
            android:text="@string/android_developer"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tvSubRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="since 2012"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSkillsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_margin"
            android:layout_gravity="center_horizontal"
            android:text="@string/skills"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/layoutSkillsBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_margin"
            android:layout_marginEnd="@dimen/general_margin"
            android:layout_gravity="center_horizontal"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/general_margin"
            app:alignContent="space_between"
            app:alignItems="stretch"
            app:flexWrap="wrap"
            app:justifyContent="space_around">

            <com.adamstyrc.portfolioapp.ui.view.MaterialLabelView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                app:text="Android SDK" />

            <com.adamstyrc.portfolioapp.ui.view.MaterialLabelView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                app:text="Android" />

            <com.adamstyrc.portfolioapp.ui.view.MaterialLabelView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                app:text="Kotlin" />

            <com.adamstyrc.portfolioapp.ui.view.MaterialLabelView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                app:text="Dagger" />

            <com.adamstyrc.portfolioapp.ui.view.MaterialLabelView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                app:text="Retrofit" />

            <com.adamstyrc.portfolioapp.ui.view.MaterialLabelView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                app:text="Android Testing" />
        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:id="@+id/tvDescriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_margin"
            android:layout_gravity="center_horizontal"
            android:text="@string/description"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/general_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/general_margin"
            android:text="@string/description_sample" />

    </LinearLayout>
</ScrollView>